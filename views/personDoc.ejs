<div class="form">
  <div class="form-group">
      <label>Name:</label>
        <input value="<%= doc.name %>" type="text" class="form-control"></input>
      <label>ID:</label>
        <input value="<%= doc._id %>" type="text" class="form-control"></input>
      <label>Likes:</label>
        <input value="<%= doc.likes %>" type="text" class="form-control"></input>
      <label>Dislikes:</label>
        <input value="<%= doc.dislikes %>" type="text" class="form-control"></input>
      <label>Hometown:</label>
        <input value="<%= doc.hometown %>" type="text" class="form-control"></input>
      <label>Special Requests:</label>
        <input value="<%= doc.specialRequests %>" type="text" class="form-control"></input>
      <label>Significant Other:</label>
        <input value="<%= doc.significantOther %>" type="text" class="form-control"></input>
      <label>Kids:</label>
        <input value="<%= doc.kids %>" type="text" class="form-control"></input>
      <label>Favorite Team:</label>
        <input value="<%= doc.favoriteTeam %>" type="text" class="form-control"></input>
      <label>Birthday:</label>
        <input value="<%= doc.birthday%>" type="text" class="form-control"></input>
      <label>Other Notes:</label>
        <input value="<%= doc.miscNotes%>" type="text" class="form-control"></input>
      <label>Photo Submit:</label>
        <input value="<%= doc.photoUrl %>" type="text" class="form-control">
